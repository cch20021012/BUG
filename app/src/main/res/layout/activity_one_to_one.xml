<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".axl.OneToOneActivity">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:src="@mipmap/axl_onebanner"
        android:scaleType="centerCrop"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        />
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/banner"
        >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/axl_onetoone_n"
        android:layout_marginHorizontal="@dimen/dp_20"
        >
    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="学员姓名"/>
        <TextView
            android:id="@+id/chooes1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_35"/>
        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_n"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/dp_10"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/axl_onetoone_n"
            android:layout_marginHorizontal="@dimen/dp_20"
            >
            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_10"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="课程类别"/>
            <TextView
                android:id="@+id/chooes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_35"/>
            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_right_n"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/dp_10"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/axl_onetoone_n"
            android:layout_marginHorizontal="@dimen/dp_20"
            >

            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_10"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="上课时间"/>
            <TextView
                android:id="@+id/chooes3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_35"/>
            <ImageView
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_right_n"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/dp_10"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/axl_onetoone_n"
            android:layout_marginHorizontal="@dimen/dp_20"
            >
            <TextView
                android:id="@+id/name4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_10"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="教师"/>
            <TextView
                android:id="@+id/chooes4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_35"/>
            <ImageView
                android:id="@+id/image4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_right_n"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/dp_10"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:background="@drawable/axl_payfillet"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_50"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#ffffff"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_100"
        />

</androidx.constraintlayout.widget.ConstraintLayout>