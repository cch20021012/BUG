<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/navigation_benzhou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:text="本周六晚上8点直播课堂"
        android:textSize="@dimen/dp_25" />

    <TextView
        android:id="@+id/navigation_riqi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:text="2020-12-12 16:00" />

    <ImageView
        android:id="@+id/navigation_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@mipmap/z1" />

    <TextView
        android:id="@+id/navigation_name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:text="《掌握大师级演奏技巧》" />

    <TextView
        android:id="@+id/navigation_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/dp_15"
        android:gravity="center"
        android:textColor="#E41F11"
        android:text="12月5日20:00马上开课啦" />

    <TextView
        android:id="@+id/navigation_name3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        android:textColor="#DA0303"
        android:text="直接点击 或 扫描下方的二维码" />
    <Button
        android:id="@+id/navigation_bton"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:textColor="#F1F6F6"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/z1_selector_yuan"
        android:text="立即报名"/>
</LinearLayout>