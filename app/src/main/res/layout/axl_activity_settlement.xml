<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".axl.SettlementActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:text="计算详情"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_8"
        android:textColor="#000000"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_70"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@mipmap/ic_curriculum"
            android:scaleType="center"
            android:layout_marginVertical="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/fillet"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/img"
            app:layout_constraintLeft_toRightOf="@id/img"
            android:text="声乐系统课"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通订单"
            app:layout_constraintBottom_toBottomOf="@id/img"
            app:layout_constraintLeft_toRightOf="@id/img"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ 299"
            app:layout_constraintTop_toTopOf="@id/img"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#FF0000"
            android:textSize="@dimen/dp_15"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons2"
        app:layout_constraintTop_toBottomOf="@id/cons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#ffffff"
        >
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="商品原价"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#1F1F1F"
            />
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="￥299"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#1F1F1F"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/cons2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:background="#ffffff"
        >
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="优惠卷"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#1F1F1F"
            />
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="暂无可用 >"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计:"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="#1F1F1F"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/sum"
            app:layout_constraintLeft_toRightOf="@id/sum"
            android:text="￥"
            android:textColor="#FD5F24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/ic"
            app:layout_constraintLeft_toRightOf="@id/ic"
            android:text="299.00"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="#FD5F24"
            />
    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去支付"
        android:background="@drawable/axl_payfillet"
        android:textSize="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#ffffff"
        android:paddingHorizontal="@dimen/dp_30"
        android:paddingVertical="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>