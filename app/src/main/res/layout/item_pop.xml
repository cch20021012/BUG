<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/shape2">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品信息"
        android:textColor="#000000"
        android:textSize="@dimen/sp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shape"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:text="声乐系统课"
        android:textColor="#000000"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="@id/shape"
        app:layout_constraintLeft_toRightOf="@id/shape" />

    <TextView
        android:id="@+id/hao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="订单号：123456789"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toRightOf="@id/shape"
        app:layout_constraintTop_toBottomOf="@id/shape" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#A58E8E"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hao" />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:text="￥"
        android:textColor="#FF5722"
        android:textSize="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:text="299"
        android:textColor="#FF5722"
        android:textSize="@dimen/sp_30"
        app:layout_constraintBottom_toBottomOf="@id/money"
        app:layout_constraintLeft_toRightOf="@id/money" />

    <TextView
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/sp_30"
        android:text="￥599"
        app:layout_constraintBottom_toBottomOf="@id/money"
        app:layout_constraintLeft_toRightOf="@id/price" />

    <Button
        android:id="@+id/btn"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/shape"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_20"
        android:text="去支付"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_18"
        app:layout_constraintTop_toBottomOf="@id/view" />
</androidx.constraintlayout.widget.ConstraintLayout>