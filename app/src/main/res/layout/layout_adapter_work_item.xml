<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hui"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_marginTop="@dimen/dp_1"
        android:paddingTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/work_img_img"
            android:src="@mipmap/me_work_wormen"
            android:scaleType="fitXY"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/work_tv_name"
            android:text="11111"
            android:textSize="@dimen/dp_20"
            android:layout_toRightOf="@id/work_img_img"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@mipmap/me_star"
            android:layout_toRightOf="@id/work_img_img"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"/>

        <ImageView
            android:src="@mipmap/me_star"
            android:layout_toRightOf="@id/work_img_img"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_47"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"/>
        <ImageView
            android:src="@mipmap/me_star"
            android:layout_toRightOf="@id/work_img_img"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"/>

        <ImageView
            android:src="@mipmap/me_like"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"/>
    </RelativeLayout>

    <RelativeLayout
        android:paddingBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/hui"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"/>
        <TextView
            android:id="@+id/work_tv_worknum"
            android:text="声乐系统课-第一节"
            android:textSize="@dimen/sp_13"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:background="@drawable/shape_work_worknum"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/work_tv_data"
            android:text="9小时前"
            android:textColor="@color/colorA"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/work_btn_look"
            android:text="查看点评"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_20"
            android:layout_below="@id/work_tv_worknum"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_130"
            android:background="@drawable/me_fragment_rl_select"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_35"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>