<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".axl.LoginActivity">
    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码登录"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="@dimen/dp_25"
        android:textColor="#000000"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        app:layout_constraintTop_toTopOf="@id/code"
        app:layout_constraintLeft_toRightOf="@id/code"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/dp_25"
        app:layout_constraintBottom_toBottomOf="@id/code"
        />
    <TextView
        android:id="@+id/mima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码登录"
        app:layout_constraintTop_toTopOf="@id/code"
        app:layout_constraintLeft_toRightOf="@id/a"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="@dimen/dp_25"/>
    <ImageView
        android:id="@+id/light"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/ic_light"
        app:layout_constraintLeft_toLeftOf="@id/code"
        app:layout_constraintTop_toBottomOf="@id/code"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/vc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="为注册的手机号码将直接注册"
        app:layout_constraintTop_toTopOf="@id/light"
        app:layout_constraintLeft_toRightOf="@id/light"
        android:layout_marginLeft="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@id/light"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conos1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/light"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        >
        <ImageView
            android:id="@+id/iphone"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/ic_iphone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/baliu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86"
            app:layout_constraintLeft_toRightOf="@id/iphone"
            app:layout_constraintTop_toTopOf="@id/iphone"
            app:layout_constraintBottom_toBottomOf="@id/iphone"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            app:layout_constraintTop_toTopOf="@id/baliu"
            app:layout_constraintBottom_toBottomOf="@id/baliu"
            app:layout_constraintLeft_toRightOf="@id/baliu"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/b"
            app:layout_constraintTop_toTopOf="@id/b"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@null"
            android:hint="输入手机号"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#E4E4E4"
            app:layout_constraintTop_toBottomOf="@id/iphone"
            android:layout_marginTop="@dimen/dp_10"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conos2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/conos1"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        >
        <ImageView
            android:id="@+id/key"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/ic_key"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/key"
            app:layout_constraintTop_toTopOf="@id/key"
            app:layout_constraintRight_toRightOf="@id/vc"
            android:background="@null"
            android:hint="请输入密码"
            />
        <TextView
            android:id="@+id/vc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="获取验证码"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#E4E4E4"
            app:layout_constraintTop_toBottomOf="@id/key"
            android:layout_marginTop="@dimen/dp_10"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/conos2"
        android:background="@drawable/axl_payfillet"
        android:paddingVertical="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingHorizontal="@dimen/dp_130"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        >
        <CheckBox
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:textSize="@dimen/dp_10"
            />
        <TextView
            android:layout_marginLeft="@dimen/dp_0_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录即代表同意"
            android:textSize="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《中国移动认证服务条款》"
            android:textColor="#4599FF"
            android:textSize="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textSize="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textColor="#4599FF"
            android:textSize="@dimen/dp_10"
            />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>