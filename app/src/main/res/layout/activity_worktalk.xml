<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/hui"
    android:orientation="vertical"
    android:layout_margin="@dimen/dp_10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/coo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/left"
            android:layout_marginLeft="@dimen/dp_10" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作业点评"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/dp_17" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/work_img_img"
            android:src="@mipmap/me_work_wormen"
            android:scaleType="fitXY"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/work_tv_name"
            android:text="11111"
            android:textSize="@dimen/dp_20"
            android:layout_toRightOf="@id/work_img_img"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@mipmap/me_star"
            android:layout_toRightOf="@id/work_img_img"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"/>

        <ImageView
            android:src="@mipmap/me_star"
            android:layout_toRightOf="@id/work_img_img"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_47"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"/>
        <ImageView
            android:src="@mipmap/me_star"
            android:layout_toRightOf="@id/work_img_img"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"/>

        <ImageView
            android:src="@mipmap/me_like"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"/>
    </RelativeLayout>

    <RelativeLayout
        android:paddingBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/hui"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"/>
        <TextView
            android:id="@+id/work_tv_worknum"
            android:text="声乐系统课-第一节"
            android:textSize="@dimen/sp_13"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:background="@drawable/shape_work_worknum"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/work_tv_data"
            android:text="9小时前"
            android:textColor="@color/colorA"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="壮壮"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/hour"
            android:text="9小时前"
            android:textColor="@color/colorA"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_below="@id/hour"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/me_work_wormen"
            android:scaleType="fitXY"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_10"/>

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">
        <TextView
            android:id="@+id/tv_theach"
            android:text="元宝老师"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
           android:padding="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/tv_data"
            android:text="昨天 15:17"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_one"
            android:text="节拍训练"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:layout_below="@id/tv_theach"
            android:background="@drawable/shape_work_worknum"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_25"/>

        <TextView
            android:id="@+id/tv_two"
            android:text="节拍训练"
            android:gravity="center"
            android:layout_below="@id/tv_theach"
            android:layout_toRightOf="@id/tv_one"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/shape_work_worknum"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_25"/>

        <TextView
            android:id="@+id/tv_three"
            android:text="节拍训练"
            android:gravity="center"
            android:layout_below="@id/tv_theach"
            android:layout_toRightOf="@id/tv_two"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/shape_work_worknum"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_25"/>
        <TextView
            android:id="@+id/tv_fout"
            android:text="节拍训练"
            android:gravity="center"
            android:layout_below="@id/tv_one"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/shape_work_worknum"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_25"/>

        <TextView
            android:layout_below="@id/tv_fout"
            android:layout_margin="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:text="节拍练习节拍练习节拍练习节拍练习节拍练节拍练习节拍练习节拍练习节拍练习节拍练习节拍练习节拍练习节拍练习节拍练习"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</LinearLayout>