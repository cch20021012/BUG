<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".axl.PayActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_120"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:background="@drawable/axl_fillets"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="声乐系统课"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/dp_20"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商户订单号:133652369856475"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#747474"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多信息 ∨"
            app:layout_constraintTop_toBottomOf="@id/number"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#5ab4ff"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_200"
        app:layout_constraintTop_toBottomOf="@id/cons1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/axl_fillets"
        >
        <TextView
            android:id="@+id/manner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <ImageView
            android:id="@+id/weixin"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            app:layout_constraintTop_toBottomOf="@id/manner"
            app:layout_constraintLeft_toLeftOf="@id/manner"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/ic_weixin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/weixin"
            app:layout_constraintBottom_toBottomOf="@id/weixin"
            app:layout_constraintLeft_toRightOf="@id/weixin"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="微信支付"
            />
        <ImageView
            android:id="@+id/zhifubao"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            app:layout_constraintTop_toBottomOf="@id/weixin"
            app:layout_constraintLeft_toLeftOf="@id/weixin"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/ic_zhifubao"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/zhifubao"
            app:layout_constraintBottom_toBottomOf="@id/zhifubao"
            app:layout_constraintLeft_toRightOf="@id/zhifubao"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="支付宝支付"
            />
        <ImageView
            android:id="@+id/yuer"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            app:layout_constraintTop_toBottomOf="@id/zhifubao"
            app:layout_constraintLeft_toLeftOf="@id/zhifubao"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/ic_yuer"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/yuer"
            app:layout_constraintBottom_toBottomOf="@id/yuer"
            app:layout_constraintLeft_toRightOf="@id/yuer"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="余额"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="#f4f4f4"
            app:layout_constraintTop_toBottomOf="@id/yuer"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/view"
            android:layout_marginHorizontal="@dimen/dp_15"
            />
        <ImageView
            android:id="@+id/conpon"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintLeft_toLeftOf="@id/view"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/ic_conpon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/conpon"
            app:layout_constraintBottom_toBottomOf="@id/conpon"
            app:layout_constraintLeft_toRightOf="@id/conpon"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="使用优惠券"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去查看"
            app:layout_constraintTop_toTopOf="@id/conpon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/conpon"
            android:layout_marginRight="@dimen/dp_20"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/axl_buttoncons"
        >
        <TextView
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应付金额:"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/dp_15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥299"
            app:layout_constraintTop_toTopOf="@id/all"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/dp_15"
            android:textColor="#FF5722"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/axl_payfillet"
            android:text="去支付"
            android:textColor="#ffffff"
            android:paddingHorizontal="@dimen/dp_150"
            android:paddingVertical="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>