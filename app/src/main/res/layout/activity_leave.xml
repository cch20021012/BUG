<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zzx.LeaveActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在学习"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="钢琴一对一线上直播课"
        android:layout_marginTop="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shap_view_leave"
        android:layout_marginTop="@dimen/dp_70"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刘淑琴老师"
        android:layout_marginTop="@dimen/dp_90"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shap_view_leave"
        android:layout_marginTop="@dimen/dp_120"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_150"
        android:background="#DDDCDC"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:background="#EFE9E9"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                app:layout_constraintRight_toRightOf="parent"
                >
                <TextView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/shap_circler"
                    android:text="1"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="3dp"
                    android:background="#FFAB40"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/shap_circler"
                    android:text="2"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="3dp"
                    android:background="#FFAB40"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/shap_circler"
                    android:text="3"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    />
            </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"

            >
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交申请"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核"
                />
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Spinner
            app:layout_constraintTop_toBottomOf="@id/con"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_width="match_parent"
            android:background="@drawable/shap_spin"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/spinner2"
            android:entries="@array/spingarr"
            android:paddingLeft="@dimen/dp_170"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请时间"
            app:layout_constraintTop_toBottomOf="@id/con"
            android:layout_marginLeft="@dimen/dp_60"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_35"
            android:textSize="@dimen/sp_18"

            />
        <Button
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_event_btn"
            android:text="请假申请"
            app:layout_constraintTop_toBottomOf="@id/con"
            android:layout_marginTop="@dimen/dp_100"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规则说明：\n \n1.请假次数：每年不能超过XXXXXX，XXXXXXXX\nXXXXXXXX。\n\n2.提交后XX分钟以内可取消请假申请。"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="@dimen/dp_30"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>